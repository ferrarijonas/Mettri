{
  "manifest_version": 3,
  "name": "Mettri",
  "version": "2.0.1",
  "description": "Plataforma de vendas conversacionais para WhatsApp Web",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.workers.dev/*",
    "https://*.github.io/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.workers.dev https://workers.dev https://*.github.io"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content-bridge.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Mettri"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "panel.css",
        "themes/*.css"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}