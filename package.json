{
  "name": "mettri",
  "version": "2.0.0",
  "description": "Plataforma de vendas conversacionais para WhatsApp Web",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.js --watch",
    "build": "node esbuild.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,css}\"",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "whatsapp",
    "crm",
    "chrome-extension",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.260",
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
