{
  "name": "mettri",
  "version": "2.0.0",
  "description": "Plataforma de vendas conversacionais para WhatsApp Web",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.js --watch",
    "build": "node esbuild.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,css}\"",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:cdp": "tsx tests/automation/index.ts",
    "chrome:debug": "powershell -ExecutionPolicy Bypass -File scripts/start-chrome-debug.ps1",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "whatsapp",
    "crm",
    "chrome-extension",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.260",
    "@types/node": "^25.0.6",
    "@vitest/ui": "^1.6.1",
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "fake-indexeddb": "^5.0.2",
    "jsdom": "^24.1.3",
    "prettier": "^3.2.0",
    "puppeteer-core": "^24.34.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
